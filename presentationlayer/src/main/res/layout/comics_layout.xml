<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/comics_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_below="@+id/tab_divider"
        android:id="@+id/progress_bar"
        >
        <fr.castorflex.android.circularprogressbar.CircularProgressBar

            android:layout_width="@dimen/progress_bar_width"
            android:layout_height="@dimen/progress_bar_width"
            android:layout_gravity="center"
            android:gravity="center"
            android:indeterminate="true"
            app:cpb_colors="@array/progress_bar_colours"
            app:cpb_max_sweep_angle="300"
            app:cpb_min_sweep_angle="10"
            app:cpb_rotation_speed="0.6"
            app:cpb_stroke_width="3dp"
            app:cpb_sweep_speed="0.6"
            />

    </LinearLayout>


</LinearLayout>