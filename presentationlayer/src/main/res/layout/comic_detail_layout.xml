<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/title"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            tools:text="Marvel Super Heros"/>

        <TextView
            android:id="@+id/description"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginTop="50dp"
            tools:text="Marvel Super Heroes"/>


        <TextView
            android:id="@+id/page_count"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginTop="50dp"
            tools:text="Page count"/>


        <TextView
            android:id="@+id/price"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginTop="50dp"
            tools:text="Price Â£9.99"/>

        <TextView
            android:id="@+id/authors"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginTop="50dp"
            tools:text="James Cameron"/>


    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_below="@+id/tab_divider"
        android:id="@+id/progress_bar"
        >
        <fr.castorflex.android.circularprogressbar.CircularProgressBar

            android:layout_width="@dimen/progress_bar_width"
            android:layout_height="@dimen/progress_bar_width"
            android:layout_gravity="center"
            android:gravity="center"
            android:indeterminate="true"
            app:cpb_colors="@array/progress_bar_colours"
            app:cpb_max_sweep_angle="300"
            app:cpb_min_sweep_angle="10"
            app:cpb_rotation_speed="0.6"
            app:cpb_stroke_width="3dp"
            app:cpb_sweep_speed="0.6"
            />

    </LinearLayout>

</LinearLayout>